<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:id="@+id/container"
             android:layout_height="match_parent" android:background="#9efff2">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/editText" android:layout_alignBottom="@+id/button"
                android:layout_toStartOf="@+id/button"/>
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView" android:layout_below="@+id/button" android:layout_alignParentStart="false">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/taskList"
                    android:layout_toStartOf="@+id/button" android:layout_below="@+id/button"
                    android:layout_alignEnd="@+id/button">
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>