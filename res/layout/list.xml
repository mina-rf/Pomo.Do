<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_label" android:minWidth="20dp"/>
    <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/task_name_inlist" android:layout_weight="0.4"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/task_target_done" android:layout_weight="0.2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_start" android:background="#e664ffff"
            android:focusable="false"/>
</LinearLayout>