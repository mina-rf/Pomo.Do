<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ff8f22" android:weightSum="1">

    <com.sharif.PomoDo.TimerView
            android:id="@+id/custView"
            android:layout_width="wrap_content"
            android:layout_height="277dp"
            android:layout_margin="5dp"
            />
    <TextView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_weight="0.48"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2" android:layout_gravity="center_horizontal"/>

</LinearLayout>